# Conky configuration script.
# Filename: .conkyrc
# Version: 020612
# Author: robz
# This config will give you a horizontal layout with a screen aspect ratio of
# 16:9 sized for 1920 x 1080 pixels resolution monitor.
# You'll need the lm-sensors & hddtemp packages from the repositories -
# sudo apt-get install lm-sensors hddtemp - follow the setup procedures in the
# man pages, you'll also need my rhythmbox-progbar script see below.
# The hard drive names and locations will probably need to be changed to suit
# your PC as will the lm-sensors cpu and motherboard temperatue names, maybe
# the name of your network interface as well :)
# To start, in a terminal - conky -d -c <path to .conkyrc2>
# Or as a startup application - conky -d -p15 -c <path to .conkyrc2>
# OK here - we - go!

# Locale, fonts and font sizes.
use_xft yes
xftfont Clean:size=9
override_utf8_locale yes

# Conky performance
update_interval 1
total_run_times 0
double_buffer yes
no_buffers yes
net_avg_samples 4
text_buffer_size 1024
top_name_width 22

# Execute it in its own window
background yes
override_utf8_locale yes

own_window yes
own_window_argb_visual yes
own_window_argb_value 0
own_window_class Conky
own_window_colour 101010
own_window_hints undecorated,below,sticky,skip_taskbar,skip_pager
#own_window_transparent yes
#own_window_type desktop
#own_window_type normal

# Font colors
default_color white # mid grey

# Header colors
color0 FFFF66 # pale yellow

# Minimum dimensions
minimum_size 1366 100
default_bar_size 100 10
default_graph_size 100 10

# Conky positioning, roughly centred.
alignment bottom_left
gap_y 55
gap_x 0

#MPD settings
mpd_port 6600
mpd_password password1

########### Stuff after "TEXT" will appear onscreen ###########################
TEXT
${goto 15}${font style=Bold:size=18}${color0}Arch Linux ${font}\
${kernel}${font Clean:size=10}\
${goto 256}Memory & Disks:\
${goto 560}Network:\
${goto 765}Top Processes:\
${goto 975}Activity:\
${goto 1160}Music:\
${font}${color}${voffset 5}
########### End of headings line ##############################################
${goto 15}${if_match ${cpu cpu0} > 75}CPU: !!!${goto 100}${color red}\
${cpubar cpu0}${color}  ${cpu cpu0}%${else}CPU Average:${goto 100}\
${cpubar cpu0}  ${cpu cpu0}%${endif}\
${goto 256}/home:${goto 330}${fs_used /home}\
${goto 380}${fs_bar /home}  ${fs_size /home}\
${goto 560}Up:\
${goto 605}${upspeedgraph wlp3s0b1 10,100 B7B2AD 0099FF -t}  ${upspeed wlp3s0b1}\
${goto 765}${top name 1}${goto 865}${top pid 1}${goto 905}${top cpu 1}%\
${goto 975}Processes:${goto 1070}${running_processes}  Running\
${goto 1160}Status:${goto 1210}${mpd_status}
########### End of first line #################################################
${goto 15}${if_match ${cpu cpu1} > 75}1 (${freq 1} MHz):${goto 100}${color red}\
${cpubar cpu1}${color}  ${cpu cpu1}%${else}1 (${freq 1} MHz):${goto 100}\
${cpubar cpu1}  ${cpu cpu1}%${endif}\
${goto 256}/BigDisk:${goto 330}${fs_used /run/media/artur/BigDisk}\
${goto 380}${fs_bar /run/media/artur/BigDisk}  ${fs_size /run/media/artur/BigDisk}\
${goto 560}Down:\
${goto 605}${downspeedgraph wlp3s0b1 10,100 B7B2AD FF0000 -t}  ${downspeed wlp3s0b1}\
${goto 765}${top name 2}${goto 865}${top pid 2}${goto 905}${top cpu 2}%\
${goto 975}Load Average: ${goto 1070}${loadavg}\
${goto 1160}Artist:${goto 1210}${mpd_artist}
########### End of second line ################################################
${goto 15}${if_match ${cpu cpu2} > 75}2 (${freq 2} MHz):${goto 100}${color red}\
${cpubar cpu2}${color}  ${cpu cpu2}%${else}2 (${freq 2} MHz):${goto 100}\
${cpubar cpu2}  ${cpu cpu2}%${endif}\
${goto 256}/Storage:${goto 330}${fs_used /run/media/artur/Storage}\
${goto 380}${fs_bar /run/media/artur/Storage}  ${fs_size /run/media/artur/Storage}\
${goto 560}Today:${goto 605}${execi 120 vnstat -i enp5s0+wlp3s0 --oneline | cut -d ';' -f 5} - ${execi 120 vnstat -i enp5s0+wlp3s0 --oneline | cut -d ';' -f 4}\
${goto 765}${top name 3}${goto 865}${top pid 3}${goto 905}${top cpu 3}%\
${goto 975}/SSD I/O:${goto 1070}${diskio /dev/sda}/s\
${goto 1160}Title:${goto 1210}${mpd_title}
########### End of third line #################################################
${goto 15}${if_match ${cpu cpu3} > 75}3 (${freq 3} MHz):${goto 100}${color red}\
${cpubar cpu3}${color}  ${cpu cpu3}%${else}3 (${freq 3} MHz):${goto 100}\
${cpubar cpu3}  ${cpu cpu3}%${endif}\
${goto 256}Ram:${goto 330}${mem}${goto 380}${membar 10,100}  ${memmax}\
${goto 560}Month:${goto 605}${execi 120 vnstat -i enp5s0+wlp3s0 --oneline | cut -d ';' -f 10} - ${execi 120 vnstat -i enp5s0+wlp3s0 --oneline | cut -d ';' -f 9}\
${goto 765}${top name 4} ${goto 865}${top pid 4}${goto 905}${top cpu 4}%\
${goto 975}Uptime:${goto 1070}$uptime_short\
${goto 1160}${mpd_bar}${goto 1265}${mpd_elapsed} / ${mpd_length} (${mpd_percent}%)
########### End of forth line #################################################
${goto 15}${if_match ${cpu cpu4} > 75}4 (${freq 4} MHz):${goto 100}${color red}\
${cpubar cpu4}${color}  ${cpu cpu4}%${else}4 (${freq 4} MHz):${goto 100}\
${cpubar cpu4}  ${cpu cpu4}%${endif}\
${goto 256}Swap:${goto 330}${swap}\
${goto 380}${swapbar 10,100}  ${swapmax}\
${goto 560}Totals:${goto 605}${execi 120 vnstat -i enp5s0+wlp3s0 --oneline | cut -d ';' -f 14}  -  ${execi 120 vnstat -i enp5s0+wlp3s0 --oneline | cut -d ';' -f 15}${font}\
${goto 765}${top name 5}${goto 865}${top pid 5}${goto 905}${top cpu 5}%\
${goto 975}Temp:${goto 1070}${execi 1 sensors | grep 'Core 0' | cut -c15-22} ${execi 1 sensors | grep 'Core 2' | cut -c15-22}
########### End of forth line #################################################
