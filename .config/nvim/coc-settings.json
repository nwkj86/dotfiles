{
    "languageserver": {
        "ccls": {
            "command": "ccls",
            "args": [
                "--log-file=/tmp/ccls.log",
                "-v=1"
            ],
            "cwd": "./build",
            "filetypes": [
                "c",
                "cpp",
                "objc",
                "objcpp"
            ],
            "rootPatterns": [
                ".ccls",
                ".vim/",
                ".git/",
                ".hg/"
            ],
            "initializationOptions": {
                "compilationDatabaseDirectory": "./build",
                "cache": {
                    "directory": "/tmp/ccls"
                },
                "clang": {
                    "excludeArgs": [],
                    "extraArgs": [],
                    "pathMappings": []
                },
                "index": {
                    "threads": 7,
                    "multiVersion": 0
                }
            }
        }
    }
}
